<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Background image and Text Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://docs.adobe.com/docs/en/aem/6-1.html">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Title Styled"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <Title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./title"/>
                                    <Description
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textarea"
                                        fieldLabel="Description"
                                        name="./description"/>
                                    <Width
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Select Width"
                                        name="./width">
                                        <items jcr:primaryType="nt:unstructured">
                                            <option1
                                                jcr:primaryType="nt:unstructured"
                                                text="small"
                                                value="120"/>
                                            <option2
                                                jcr:primaryType="nt:unstructured"
                                                text="medium"
                                                value="233"/>
                                            <option3
                                                jcr:primaryType="nt:unstructured"
                                                text="large"
                                                value="480"/>
                                        </items>
                                    </Width>
                                    <file
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldLabel="Image asset"
                                        fileNameParameter="./fileName"
                                        fileReferenceParameter="./fileReference"
                                        mimeTypes="[image]"
                                        multiple="{Boolean}false"
                                        name="./file"
                                        title="Upload Image Asset"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                    <padding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Padding Value"
                                        name="./padding">
                                        <items jcr:primaryType="nt:unstructured">
                                            <option1
                                                jcr:primaryType="nt:unstructured"
                                                text="5px"
                                                value="p-half-y"/>
                                            <option2
                                                jcr:primaryType="nt:unstructured"
                                                text="10px"
                                                value="p1-y"/>
                                            <option3
                                                jcr:primaryType="nt:unstructured"
                                                text="20px"
                                                value="p2-y"/>
                                            <option4
                                                jcr:primaryType="nt:unstructured"
                                                text="30px"
                                                value="p3-y"/>
                                            <option5
                                                jcr:primaryType="nt:unstructured"
                                                text="40px"
                                                value="p4-y"/>
                                            <option6
                                                jcr:primaryType="nt:unstructured"
                                                text="50px"
                                                value="p5-y"/>
                                            <option7
                                                jcr:primaryType="nt:unstructured"
                                                text="60px"
                                                value="p6-y"/>
                                            <option8
                                                jcr:primaryType="nt:unstructured"
                                                text="70px"
                                                value="p7-y"/>
                                            <option9
                                                jcr:primaryType="nt:unstructured"
                                                text="80px"
                                                value="p8-y"/>
                                        </items>
                                    </padding>
                                </items>
                            </column>
                        </items>
                    </tab1>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/heading"
                                                level="3"
                                                text="Welcome to Background Image &amp; Text Component"/>
                                        </items>
                                    </columns1>
                                    <columns2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/container"
                                        class="coral-Form-fieldwrapper">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/text"
                                                text="This component will allow us to show the background image, text and its description."/>
                                        </items>
                                    </columns2>
                                    <columns3
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/container"
                                        class="coral-Form-fieldwrapper">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/text"
                                                text="It contains place to drag and drop the image which can be used as a background, title, description and width."/>
                                        </items>
                                    </columns3>
                                </items>
                            </columns>
                        </items>
                    </help>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
