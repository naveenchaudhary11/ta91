<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Columns"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <coltype
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="[granite/ui/components/coral/foundation/form/select]"
                                        allowBlank="{Boolean}false"
                                        editable="true"
                                        fieldLabel="column type"
                                        name="./coltype">
                                        <items jcr:primaryType="nt:unstructured">
                                            <col-4-8
                                                jcr:primaryType="nt:unstructured"
                                                text="4-8 Column"
                                                value="4-8-col"/>
                                            <col-4-4-4
                                                jcr:primaryType="nt:unstructured"
                                                text="4-4-4 Column"
                                                value="4-4-4-col"/>
                                            <col-6-6
                                                jcr:primaryType="nt:unstructured"
                                                text="6-6 Column"
                                                value="6-6-col"/>
                                            <col-3-3-3-3
                                                jcr:primaryType="nt:unstructured"
                                                text="3-3-3-3 Column"
                                                value="3-3-3-3-col"/>
                                            <col-3-9
                                                jcr:primaryType="nt:unstructured"
                                                text="3-9 Column"
                                                value="3-9-col"/>
                                            <col-9-3
                                                jcr:primaryType="nt:unstructured"
                                                text="9-3 Column"
                                                value="9-3-col"/>
                                            <col-3-3-6
                                                jcr:primaryType="nt:unstructured"
                                                text="3-3-6 Column"
                                                value="3-3-6-col"/>
                                            <col-6-3-3
                                                jcr:primaryType="nt:unstructured"
                                                text="6-3-3 Column"
                                                value="6-3-3-col"/>
                                            <col-3-6-3
                                                jcr:primaryType="nt:unstructured"
                                                text="3-6-3 Column"
                                                value="3-6-3-col"/>
                                            <col-8-4
                                                jcr:primaryType="nt:unstructured"
                                                text="8-4 Column"
                                                value="8-4-col"/>
                                            <col-2-2-2-2-2-2
                                                jcr:primaryType="nt:unstructured"
                                                text="2-2-2-2-2-2 Column"
                                                value="2-2-2-2-2-2-col"/>
                                        </items>
                                    </coltype>
                                    <padding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Padding Value"
                                        name="./padding">
                                        <items jcr:primaryType="nt:unstructured">
                                            <option1
                                                jcr:primaryType="nt:unstructured"
                                                text="5px"
                                                value="p-half-y"/>
                                            <option2
                                                jcr:primaryType="nt:unstructured"
                                                text="10px"
                                                value="p1-y"/>
                                            <option3
                                                jcr:primaryType="nt:unstructured"
                                                text="20px"
                                                value="p2-y"/>
                                            <option4
                                                jcr:primaryType="nt:unstructured"
                                                text="30px"
                                                value="p3-y"/>
                                            <option5
                                                jcr:primaryType="nt:unstructured"
                                                text="40px"
                                                value="p4-y"/>
                                            <option6
                                                jcr:primaryType="nt:unstructured"
                                                text="50px"
                                                value="p5-y"/>
                                            <option7
                                                jcr:primaryType="nt:unstructured"
                                                text="60px"
                                                value="p6-y"/>
                                            <option8
                                                jcr:primaryType="nt:unstructured"
                                                text="70px"
                                                value="p7-y"/>
                                            <option9
                                                jcr:primaryType="nt:unstructured"
                                                text="80px"
                                                value="p8-y"/>
                                        </items>
                                    </padding>
                                    <check
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldLabel="Reverse order"
                                        name="./reverse"
                                        text="Reverse order in mobile view"
                                        value="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </tab1>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/heading"
                                                level="3"
                                                text="Welcome to Column Control  component"/>
                                        </items>
                                    </columns1>
                                    <columns2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/container"
                                        class="coral-Form-fieldwrapper">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/text"
                                                text="Column control component lets an author split the content in the main panel of the web-page into multiple columns."/>
                                        </items>
                                    </columns2>
                                    <columns3
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/container"
                                        class="coral-Form-fieldwrapper">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/text"
                                                text="Using a component dialog, an author defines the number of columns required and then create, delete, or move content within each of the columns."/>
                                        </items>
                                    </columns3>
                                </items>
                            </columns>
                        </items>
                    </help>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
