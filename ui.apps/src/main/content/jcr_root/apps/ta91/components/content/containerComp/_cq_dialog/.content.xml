<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Container Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Container"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <backgroundcolor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Background Color"
                                        name="./bgcolor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <option1
                                                jcr:primaryType="nt:unstructured"
                                                text="White color"
                                                value=".bg-white"/>
                                            <option2
                                                jcr:primaryType="nt:unstructured"
                                                text="Black color"
                                                value="bg-black"/>
                                        </items>
                                    </backgroundcolor>
                                    <textcolor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Text Color"
                                        name="./textcolor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <option1
                                                jcr:primaryType="nt:unstructured"
                                                text="White color"
                                                value="text-white"/>
                                            <option2
                                                jcr:primaryType="nt:unstructured"
                                                text="Black color"
                                                value="text-black"/>
                                        </items>
                                    </textcolor>
                                    <padding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Padding Value"
                                        name="./padding">
                                        <items jcr:primaryType="nt:unstructured">
                                            <option3
                                                jcr:primaryType="nt:unstructured"
                                                text="20px"
                                                value="p2-y"/>
                                            <option1
                                                jcr:primaryType="nt:unstructured"
                                                text="5px"
                                                value="p-half-y"/>
                                            <option2
                                                jcr:primaryType="nt:unstructured"
                                                text="10px"
                                                value="p1-y"/>
                                            <option4
                                                jcr:primaryType="nt:unstructured"
                                                text="30px"
                                                value="p3-y"/>
                                            <option5
                                                jcr:primaryType="nt:unstructured"
                                                text="40px"
                                                value="p4-y"/>
                                            <option6
                                                jcr:primaryType="nt:unstructured"
                                                text="50px"
                                                value="p5-y"/>
                                            <option7
                                                jcr:primaryType="nt:unstructured"
                                                text="60px"
                                                value="p6-y"/>
                                            <option8
                                                jcr:primaryType="nt:unstructured"
                                                text="70px"
                                                value="p7-y"/>
                                            <option9
                                                jcr:primaryType="nt:unstructured"
                                                text="80px"
                                                value="p8-y"/>
                                        </items>
                                    </padding>
                                </items>
                            </column>
                        </items>
                    </tab>
                    <help
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Help"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                level="3"
                                                text="Welcome to Container Component!!"/>
                                        </items>
                                    </columns1>
                                    <columns2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        class="coral-Form-fieldwrapper">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/text"
                                                text="This component contains a parsys and acts as a section to the page.It  allows to author the background color,text color and padding value "/>
                                        </items>
                                    </columns2>
                                </items>
                            </column>
                        </items>
                    </help>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
